# Database (CockroachDB or PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/studybuddy"

# JWT Secret (for Vercel serverless auth)
JWT_SECRET="your-jwt-secret-change-in-production-min-32-chars"

# Session Secret (for Express server - local dev)
SESSION_SECRET="your-session-secret-change-in-production"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="https://your-app.vercel.app/api/auth/google/callback"

# Client URL (your Vercel deployment URL)
CLIENT_URL="https://your-app.vercel.app"

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# AI Services
# Groq AI (Primary - for task generation and news)
GROQ_API_KEY="your-groq-api-key"

# Google Gemini (Fallback)
GEMINI_API_KEY="your-gemini-api-key"

# MongoDB (Optional - for backups)
MONGODB_URI="mongodb://localhost:27017/studybuddy-backup"

# Server (for local development)
PORT=3001
NODE_ENV="development"

# CORS - Add additional allowed origins (comma-separated)
ALLOWED_ORIGINS=""
