{
  "name": "studybuddy",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "tsx watch --env-file=.env server/index.ts",
    "build": "npx tsc && npx vite build",
    "build:server": "echo 'Server build skipped - using tsx'",
    "start:server": "tsx --env-file=.env server/index.ts",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,json,css,md}\"",
    "check": "node check-setup.js",
    "clean": "bash cleanup.sh",
    "clean:deep": "bash cleanup.sh --deep",
    "cap:init": "npx cap init",
    "cap:add:android": "npx cap add android",
    "cap:sync": "npm run build && npx cap sync",
    "cap:sync:android": "npm run build && npx cap sync android",
    "cap:open:android": "npx cap open android",
    "cap:run:android": "npm run cap:sync:android && npx cap run android",
    "android:dev": "npm run build && npx cap sync android && npx cap run android"
  },
  "engines": {
    "node": ">=18"
  },
