generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String        @id @default(cuid())
  email             String        @unique
  name              String
  username          String?       @unique
  googleId          String        @unique
  avatar            String?
  avatarType        String        @default("photo")
  onboardingDone    Boolean       @default(false)
  examGoal          String        @default("JEE")
  examDate          DateTime?
  examAttempt       Int?
  studentClass      String?
  batch             String?
  syllabus          String?       @db.Text
  schoolId          String?
  collegeId         String?
  coachingId        String?
  totalPoints       Int           @default(0)
  streak            Int           @default(0)
  lastActive        DateTime      @default(now())
  createdAt         DateTime      @default(now())
  school            School?       @relation(fields: [schoolId], references: [id])
  college           College?      @relation(fields: [collegeId], references: [id])
  coaching          Coaching?     @relation(fields: [coachingId], references: [id])
  todos             Todo[]
  reports           DailyReport[]
  chatMessages      ChatMessage[]
  schoolMessages    SchoolMessage[]
  collegeMessages   CollegeMessage[]
  coachingMessages  CoachingMessage[]

  @@index([schoolId])
  @@index([collegeId])
  @@index([coachingId])
}

model School {
  id        String          @id @default(cuid())
  name      String
  city      String?
  state     String?
  createdAt DateTime        @default(now())
  users     User[]
  messages  SchoolMessage[]

  @@unique([name, city])
  @@index([name])
}

model College {
  id        String           @id @default(cuid())
  name      String
  city      String?
  state     String?
  createdAt DateTime         @default(now())
  users     User[]
  messages  CollegeMessage[]

  @@unique([name, city])
  @@index([name])
}

model Coaching {
  id        String            @id @default(cuid())
  name      String
  city      String?
  state     String?
  createdAt DateTime          @default(now())
  users     User[]
  messages  CoachingMessage[]

  @@unique([name, city])
  @@index([name])
}

model SchoolMessage {
  id        String   @id @default(cuid())
  userId    String
  schoolId  String
  message   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  school    School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  @@index([schoolId, createdAt])
}

model CollegeMessage {
  id        String   @id @default(cuid())
  userId    String
  collegeId String
  message   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  college   College  @relation(fields: [collegeId], references: [id], onDelete: Cascade)

  @@index([collegeId, createdAt])
}

model CoachingMessage {
  id         String   @id @default(cuid())
  userId     String
  coachingId String
  message    String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  coaching   Coaching @relation(fields: [coachingId], references: [id], onDelete: Cascade)

  @@index([coachingId, createdAt])
}

model FAQ {
  id          String   @id @default(cuid())
  examType    String   // "JEE", "NEET", "UPSC", etc.
  question    String
  answer      String   @db.Text
  order       Int      @default(0)
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([examType, published])
}

model Todo {
  id             String    @id @default(cuid())
  userId         String
  title          String
  subject        String
  difficulty     String
  questionsTarget Int
  completed      Boolean   @default(false)
  scheduledTime  DateTime?
  createdAt      DateTime  @default(now())
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model DailyReport {
  id              String   @id @default(cuid())
  userId          String
  date            DateTime @default(now())
  tasksPlanned    Int
  tasksCompleted  Int
  questionsEasy   Int      @default(0)
  questionsMedium Int      @default(0)
  questionsHard   Int      @default(0)
  studyHours      Float
  understanding   Int
  completionPct   Float
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([date])
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  message   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([createdAt])
}

model Notice {
  id        String   @id @default(cuid())
  title     String
  content   String
  category  String
  createdAt DateTime @default(now())
  published Boolean  @default(true)

  @@index([published])
  @@index([createdAt])
}
